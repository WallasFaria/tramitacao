<p id="notice"><%= notice %></p>

<p>
  <b>Tipo:</b>
  <%= @documento.tipo %>
</p>

<p>
  <b>Assunto:</b>
  <%= @documento.assunto %>
</p>

<p>
  <b>Numero de processo:</b>
  <%= @documento.numero_de_processo %>
</p>

<p>
  <b>Setor origem:</b>
  <%= @documento.setor_origem.nome %>
</p>

<p>
  <b>Funcionario origem:</b>
  <%= @documento.funcionario_origem.nome %>
</p>

<fieldset>
<table>
  <tr>
    <th>Setor destino</th>
    <th>Pessoa destino</th>
    <th>Data</th>
  </tr>

<% @documento.doc_tramitacaos.each do |doc_tramitacao| %>
  <tr>
    <td><%= doc_tramitacao.pessoa_destino.setor.nome %></td>
    <td><%= doc_tramitacao.pessoa_destino.nome %></td>
    <td><%= doc_tramitacao.data_hora %></td>
  </tr>
<% end %>
</table>
<% if @documento.setor_atual == current_user.funcionario.setor %>
  <p><%= link_to 'tramitar', new_documento_doc_tramitacao_path(@documento) %>
<% end %>

</fieldset>
</p>
<%= link_to 'Editar | ', edit_documento_path(@documento) if can? :edit, @documento %>
<%= link_to 'Excluir | ', @documento, :confirm => 'Tem certeza que deseja excluir?', :method => :delete if @documento.pode_ser_excluido? %>
<%= link_to 'Voltar', documentos_path %>

