<h1>Cadastrar documentos</h1>

<table>
  <tr>
    <th>Tipo</th>
    <th>Assunto</th>
    <th>Numero de processo</th>
    <th>Setor origem</th>
    <th>Funcionario origem</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documentos.each do |documento| %>
  <tr>
    <td><%= documento.tipo %></td>
    <td><%= documento.assunto %></td>
    <td><%= documento.numero_de_processo %></td>
    <td><%= documento.setor_origem.nome %></td>
    <td><%= documento.funcionario_origem.nome %></td>
    <td><%= link_to 'Mostrar', documento %></td>
    <td><%= link_to 'Editar', edit_documento_path(documento) %></td>
    <td><%= link_to 'Excluir', documento, :confirm => 'Tem certeza que deseja excluir?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

