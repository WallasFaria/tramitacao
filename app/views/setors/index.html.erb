<h1>Cadastrar de setores</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Sigla</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @setors.each do |setor| %>
  <tr>
    <td><%= setor.nome %></td>
    <td><%= setor.sigla %></td>
    <td><%= link_to 'Mostrar', setor %></td>
    <td><%= link_to 'Editar', edit_setor_path(setor) %></td>
    <td><%= link_to 'Excluir', setor, :confirm => 'Confirmar exclusao?', :method => :delete %></td>
  </tr>
<% end %>
</table>

